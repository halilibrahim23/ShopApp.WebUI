@model CategoryListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategoriler</h1>
<hr />
@if (Model.Categories.Count() > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>

            


        </tr>
        @foreach(var item in Model.Categories)
        {
        <tr>
            <th>@item.Id</th>
            <td>@item.CategoryName</td>
            <td>

                <a href="/Category/EditCategory/@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a>
                <form method="post" action="/Category/DeleteCategory" onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')" style="display:inherit">
                    <input type="hidden" name="categoryId" value="@item.Id" />
                    <button type="submit" class="btn mb-1 btn-rounded btn-outline-danger">Sil</button>
                </form>

            </td>
        </tr>
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Kategori Ekle</a>

}
else
{

    <div class="alert alert-warning">
        <h4>ÜKategori  Yok</h4>

    </div>
}